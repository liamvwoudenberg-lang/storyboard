rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // User Profiles: Users can only read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Projects: 
    // - Allow creation if authenticated
    // - Allow read/update/delete only if the user is the owner (userId matches)
    match /projects/{projectId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // For updates and deletes, ensure the user owns the existing document
      allow update: if request.auth != null 
                    && resource.data.userId == request.auth.uid 
                    && request.resource.data.userId == request.auth.uid; // Prevent transferring ownership
                    
      allow read, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}